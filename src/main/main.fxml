<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.Controller">
    <center>
        <AnchorPane prefHeight="400.0" prefWidth="500.0">
            <TextField fx:id="nameField" layoutX="14.0" layoutY="14.0" prefHeight="26.0" prefWidth="165.0"
                       AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="14.0"/>
            <Button layoutX="186.0" layoutY="15.0" mnemonicParsing="false" onAction="#sayHello" text="Привет"
                    AnchorPane.leftAnchor="186.0" AnchorPane.topAnchor="15.0"/>
            <TextField fx:id="aField" layoutX="14.0" layoutY="50.0" prefHeight="26.0" prefWidth="79.0"/>
            <TextField fx:id="bField" layoutX="105.0" layoutY="51.0" prefHeight="26.0" prefWidth="74.0"/>
            <Button layoutX="188.0" layoutY="51.0" mnemonicParsing="false" onAction="#calcSum" prefHeight="26.0"
                    prefWidth="52.0" text="Sum"/>
            <Label fx:id="sumLabel" layoutX="250.0" layoutY="55.0" prefHeight="18.0" prefWidth="119.0"/>
        </AnchorPane>
    </center>
   <top>
       <VBox prefHeight="64.0" prefWidth="500.0" BorderPane.alignment="CENTER">
           <MenuBar>
               <Menu mnemonicParsing="false" text="File">
                   <MenuItem mnemonicParsing="false" onAction="#exit" text="Close" />
               </Menu>
               <Menu mnemonicParsing="false" text="Edit">
                   <MenuItem mnemonicParsing="false" text="Delete" />
               </Menu>
               <Menu mnemonicParsing="false" text="Help">
                   <MenuItem mnemonicParsing="false" onAction="#about" text="About" />
               </Menu>
           </MenuBar>
           <ToolBar prefHeight="33.0" prefWidth="500.0">
               <Button mnemonicParsing="false" text="Button" />
           </ToolBar>
       </VBox>
   </top>
</BorderPane>
